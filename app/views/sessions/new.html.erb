<% provide(:title, 'Sign In') %>
<% content_for :features, "pages-login" %>
<% content_for :class, "pages-login" %>
<% content_for :stylesheet_head do %>
	<%= stylesheet_link_tag 'light_bootstrap_dashboard_pro/demo', media: 'all', 'data-turbolinks-track' => true %>
<% end %>
<% content_for :javascript_head do %>
	<%= javascript_include_tag 'light_bootstrap_dashboard_pro/demo', 'data-turbolinks-track' => true %>
<% end %>

<nav class="navbar navbar-transparent navbar-absolute">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to "LAST MINUTE LIST", root_path, class: "navbar-brand", id: "logo-temp-font" %>
        </div>
        <div class="collapse navbar-collapse">
        
            <ul class="nav navbar-nav navbar-right">
                <li>
                   <%= link_to "Create Account", signup_path %>
                </li>
            </ul>
        </div>
    </div>
</nav>


<div class="wrapper wrapper-full-page">
    <div class="full-page login-page" data-color="default" data-image='<%= image_path("light_bootstrap_dashboard_pro/full-screen-image-1.jpg") %>'>

    <!--   you can change the color of the filter page using: data-color="blue | azure | green | orange | red | purple" -->



        <div class="content">
            <div class="container">
                <% flash.each do |message_type, message| %>
        			<%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      			<% end %>
                <div class="row">
                    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                        <!--   if you want to have the card without animation please remove the ".card-hidden" class   -->
                            <div class="card card-hidden">
                                <div class="header text-center">Sign In</div>
                                <div class="content">
                                <!-- Start of the form -->
                                <%= simple_form_for(:session, url: login_path) do |f| %>
                             		<!-- pe render 'shared/error_messages' %> -->
							    	<%= f.text_field :email, :class => "form-control form-group", :placeholder => "Email" %>
							        <%= f.password_field :password, :class => "form-group form-control", :placeholder => "Password" %>

							    	<small>New user? <%= link_to "Create account here.", signup_path %></small>
                                </div>
	                                <div class="text-center">
	                                <%= f.button :submit, "Sign In", wrapper_html: { class: 'footer' }, class: "btn btn-fill btn-warning btn-wd" %>
	                                </div>
                                <% end %>
                            </div>

                    </div>
                </div>
            </div>
        </div>
    <%= render "layouts/footer" %>
    </div>
</div>
<%= debug(params) if Rails.env.development? %>