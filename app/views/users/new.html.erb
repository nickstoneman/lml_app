                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse">

            <ul class="nav navbar-nav navbar-right">
                <li><%= link_to "Login", login_path, :class => "nav-btn-border" %></li>
            </ul>
        </div>
    </div>
</nav>

