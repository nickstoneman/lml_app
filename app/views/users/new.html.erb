                            <div class="card card-plain">
                                <div class="content">
                                <div class="row">
                                    <%= simple_form_for @user do |f| %>
                                      <%= render 'shared/error_messages' %>
                                      <%= f.text_field :name, :class => "form-control form-group", :placeholder => "Name" %>

                                      <%= f.text_field :email, :class => "form-control form-group", :placeholder => "Email" %>

                                      <%= f.password_field :password, :class => "form-group form-control", :placeholder => "Password" %>

                                      <%= f.password_field :password_confirmation, :class => "form-group form-control", :placeholder => "Password Confirmation" %>
                                      <div class="text-center">
                                      <%= f.button :submit, "Create free account", wrapper_html: { class: 'footer' }, class: "btn btn-fill btn-neutral btn-wd" %>
